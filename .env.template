# MCP Servers Environment Variables
# Copy this file to .env and fill in your actual API keys and credentials

# General Settings
MCP_LOG_LEVEL=info

# GitHub MCP Server
GITHUB_TOKEN=your_github_token

# Weather MCP Server
WEATHER_API_KEY=your_weather_api_key

# Brave Search MCP Server
BRAVE_SEARCH_API_KEY=your_brave_search_api_key

# Filesystem MCP Server
# Add your allowed directories, separated by commas
FILESYSTEM_ALLOWED_DIRS=/home/user/documents,/home/user/downloads

# Puppeteer MCP Server
PUPPETEER_HEADLESS=true

# Memory MCP Server
MEMORY_DB_PATH=./memory.db

# Fetch MCP Server
FETCH_MAX_SIZE=10485760

# Desktop Commander MCP Server
# Add your allowed commands, separated by commas
DESKTOP_COMMANDER_ALLOWED_COMMANDS=ls,dir,cat,type,python,node
